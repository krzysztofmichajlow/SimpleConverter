<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.krzysiek.simpleconverter.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kilometers"
        android:id="@+id/textkilometer"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editkilometer"
        android:layout_alignBottom="@+id/textkilometer"
        android:layout_toRightOf="@+id/textkilometer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Miles"
        android:id="@+id/textmile"
        android:layout_below="@+id/textkilometer"
        android:layout_toLeftOf="@+id/editkilometer"
        android:layout_toStartOf="@+id/editkilometer"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editmile"
        android:layout_alignBottom="@+id/textmile"
        android:layout_toRightOf="@+id/textmile"
        android:layout_alignRight="@+id/editkilometer"
        android:layout_alignEnd="@+id/editkilometer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/buttonConverter"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editmile"
        android:layout_alignEnd="@+id/editmile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="setContentView" />
</RelativeLayout>
